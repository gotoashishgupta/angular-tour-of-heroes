{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "../out-tsc/app",
    "baseUrl": ".",
    "module": "commonjs",
    "types": [
      "node"
    ],
    "paths": {
      "@codebakery/*": ["../node_modules/@codebakery/*"]
    }
  },
  "exclude": [
    "test.ts",
    "**/*.spec.ts"
  ],
  "angularCompilerOptions": {
    "entryModule": "./app/app.server.module#AppServerModule",
    "enableLegacyTemplate": false
  }
}
