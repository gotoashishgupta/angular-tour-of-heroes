{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "../out-tsc/app",
    "baseUrl": ".",
    "module": "es2015",
    "types": [
      "node"
    ],
    "paths": {
      "@codebakery/*": [
        "../node_modules/@codebakery/*"
      ]
    }
  },
  "exclude": [
    "test.ts",
    "**/*.spec.ts",
    "**/grayskull*.ts"
  ],
  "angularCompilerOptions": {
    "enableLegacyTemplate": false
  }
}
